mixin data_item(data)
    .w-full.mt-4.relative.overflow-x-auto.shadow-md
        table(class=`w-full text-sm text-left rtl:text-right
                        text-gray-700 dark:text-gray-300`
        )
            thead(class=`text-base text-gray-800 uppercase bg-gray-300
                            dark:bg-gray-500 dark:text-gray-200`
            )
                tr
                    th(scope='col' class='px-6 py-3') id
                    th(scope='col' class='px-6 py-3') name
                    th(scope='col' class='px-6 py-3') number
            tbody
                each val in data
                    tr(class=`odd:bg-white odd:dark:bg-gray-900
                                    even:bg-gray-100 even:dark:bg-gray-700
                                    border-b dark:border-gray-700 border-gray-200`
                    )
                        th(scope='row' class=`px-6 py-4 font-medium text-gray-900
                                        whitespace-nowrap dark:text-white`)= val['id']
                        td(class='px-6 py-4')= val['name']
                        td(class='px-6 py-4')= val['number']